					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"storedProcedureName": "[dbo].[InsertFileMetadata]",
					"storedProcedureParameters": {
						"FileName": {
							"value": {
								"value": "@activity('CsvDataFolder Metadata').output.itemName",
								"type": "Expression"
